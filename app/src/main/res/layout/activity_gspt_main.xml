<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutRootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".GsptMainActivity" >

    <com.readboy.Q.Shares.GsptPlaySurfaceView
        android:id="@+id/gsptPlaySurfaceViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gsptViewPagerMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp" />

    <ImageButton
        android:id="@+id/imgBtnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_exit_selector" />

    <LinearLayout
        android:id="@+id/LinearLayoutLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_above="@+id/LinearLayoutDots"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgBtnLevelEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_level_easy_selector"
            android:layout_marginRight="27.0dp" />

        <ImageButton
            android:id="@+id/imgBtnLevelNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_level_normal_selector"
            android:layout_marginRight="27.0dp" />

        <ImageButton
            android:id="@+id/imgBtnLevelHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_level_hard_selector"
            android:layout_marginRight="27.0dp" />
    </LinearLayout>    
    
    <LinearLayout
        android:id="@+id/LinearLayoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32.0dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgBtnDot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_dot1_selector"
            android:padding="15.0dp" />

        <ImageButton
            android:id="@+id/imgBtnDot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_dot2_selector"
            android:padding="15.0dp" />

        <ImageButton
            android:id="@+id/imgBtnDot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_dot3_selector"
            android:padding="15.0dp" />

    </LinearLayout>

    <com.readboy.Q.Shares.GsptAnimView
        android:id="@+id/animMainBee"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        resCBStartId="@drawable/gspt_anim_bee_000"
        resCBPicNumber="29"
        resStartId="@drawable/gspt_anim_bee_000"
        resPicNumber="29"
        android:visibility="invisible" />
    
    <com.readboy.Q.Shares.GsptAnimView
        android:id="@+id/animMainBird"
        android:layout_width="86dp"
        android:layout_height="89dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="504dp"
        resCBStartId="@drawable/gspt_anim_bird_000"
        resCBPicNumber="11"
        resStartId="@drawable/gspt_anim_bird_000"
        resPicNumber="11"
        android:visibility="visible" />     
    
    
</RelativeLayout>